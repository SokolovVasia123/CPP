#include <iostream>
using namespace std;

int main()
{
setlocale(0, "Rus");
cout << "Циклически перебрать числа от a до b с шагом 4. айти сумму всех чисел, которые делятся на 7 без остатка:" << endl;
int a, b;
int c=0;
cout << "Введите 2 числа:" << endl;
cin >> a;
cin >> b;
for (int i=0; a+i<b+1; i=i+4) {
    if (((a+i)%7)==0){
        c=c+(a+i);
        }
}
cout << c << endl;
return 0;
}
